{
  "info": {
    "name": "MetaFetchR API",
    "description": "Postman collection for MetaFetchR - Website metadata Scraping and storage  â€” POST /api/analyze and CRUD for /api/websites",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Welcome",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Analyze Website (scrape & save)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/analyze",
          "host": ["{{base_url}}"],
          "path": ["api", "analyze"]
        }
      }
    },
    {
      "name": "Get All Websites",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/websites",
          "host": ["{{base_url}}"],
          "path": ["api", "websites"]
        }
      }
    },
    {
      "name": "Get Website by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/websites/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "websites", ":id"]
        }
      }
    },
    {
      "name": "Create Website (optional)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://example.com\",\n  \"brand\": \"Example Brand\",\n  \"description\": \"Short description or notes\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/websites",
          "host": ["{{base_url}}"],
          "path": ["api", "websites"]
        }
      }
    },
    {
      "name": "Update Website by ID",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"brand\": \"Updated Brand\",\n  \"description\": \"Updated description\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/websites/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "websites", ":id"]
        }
      }
    },
    {
      "name": "Delete Website by ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/websites/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "websites", ":id"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://metafetchr.onrender.com"
    }
  ]
}
